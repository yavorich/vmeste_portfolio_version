server {
    listen 80;
    listen [::]:80;

    server_name vmeste.dfa-media.ru www.vmeste.dfa-media.ru;
    server_tokens off;

    location /.well-known/acme-challenge/ {
        allow all;
        root /var/www/certbot;
    }
    location / {
        return 301 https://vmeste.dfa-media.ru$request_uri;
    }
}

server {
    listen 443 default_server ssl http2;
    listen [::]:443 ssl http2;

    server_name vmeste.dfa-media.ru;

    ssl_certificate /etc/nginx/ssl/live/vmeste.dfa-media.ru/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/vmeste.dfa-media.ru/privkey.pem;

    location / {
        proxy_pass              http://backend:8000;
        proxy_set_header        Host $host;
        proxy_set_header        X-Real-IP $remote_addr;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static/ {
        proxy_pass              http://backend:8000;
        proxy_set_header        Host $host;
        proxy_set_header        X-Real-IP $remote_addr;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /ws/ {
        proxy_pass              http://backend:8000;
        proxy_http_version      1.1;
        proxy_set_header        Upgrade $http_upgrade;alias /code/educa/static/;
        proxy_set_header        Connection "upgrade";
        proxy_set_header        Host $host;
        proxy_set_header        X-Real-IP $remote_addr;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header        X-Forwarded-Proto $scheme;
    }
}
